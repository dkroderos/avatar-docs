{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "ei8",
      "_appTitle": "ei8",
      "_enableSearch": true,
      "pdf": true
    },
    "sitemap": {
      "baseUrl": "https://dkroderos.github.io/avatar-docs",
      "priority": 0.5,
      "changefreq": "daily"
    }
  }
}
